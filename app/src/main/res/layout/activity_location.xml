<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location"
    android:id="@+id/big"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dcloudy"
        android:scaleType="centerCrop"
        android:contentDescription="Background Image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/head"
            android:layout_alignEnd="@+id/head"
            android:layout_alignStart="@id/head"
            android:layout_alignTop="@+id/head"
            android:background="@color/white"
            android:alpha="0.5"
            android:layout_marginBottom="1.5dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/head"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/logoblack"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/wrap"
            android:layout_alignEnd="@+id/wrap"
            android:layout_alignStart="@id/wrap"
            android:layout_alignTop="@+id/wrap"
            android:background="@color/blue_five"
            android:alpha="0.4"
            android:layout_marginBottom="1.5dp"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/head"
            android:layout_marginTop="70dp"
            android:id="@+id/wrap"
            android:orientation="vertical"

            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/idTVweather"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainn"
        android:layout_below="@id/idTVweather"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/des"
        android:layout_below="@id/mainn"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/des"
        android:orientation="horizontal"
        android:id="@+id/t1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        >



        <TextView
            android:layout_width="0dp"
            android:id="@+id/w1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:orientation="horizontal"
        android:id="@+id/t2"
        android:layout_marginBottom="5dp"
        >



        <TextView
            android:layout_width="0dp"
            android:id="@+id/w2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:orientation="horizontal"
        android:id="@+id/t3"
        android:layout_marginBottom="5dp"
        >



        <TextView
            android:layout_width="0dp"
            android:id="@+id/w3"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t3"
        android:orientation="horizontal"
        android:id="@+id/t4"
        android:layout_marginBottom="5dp"
        >



        <TextView
            android:layout_width="0dp"
            android:id="@+id/w4"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/v4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue_one"
            android:textSize="16dp"
            />
    </LinearLayout>
        </LinearLayout>


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/red"
        />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignBottom="@id/locbtn"
        android:layout_alignEnd="@+id/locbtn"
        android:layout_alignStart="@id/locbtn"
        android:layout_alignTop="@+id/forbtn"
        android:background="@color/white"
        android:alpha="0.4"
        android:layout_marginBottom="1.5dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Search"
        android:textColor="@color/blue_five"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/overlay"
        android:id="@+id/locbtn"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foreacst"
        android:layout_above="@id/locbtn"
        android:textColor="@color/blue_five"
        android:background="@drawable/overlay"
        android:id="@+id/forbtn"
        />

</RelativeLayout>